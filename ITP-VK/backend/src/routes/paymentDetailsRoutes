const express = require('express');
const router = express.Router();
const PaymentDetail = require('../models/paymentDetails'); // Ensure this model exists

// Fetch all payment details
router.get('/', async (req, res) => {
  try {
    const paymentDetails = await PaymentDetail.find();
    res.json(paymentDetails);
  } catch (error) {
    res.status(500).json({ error: 'Error fetching payment details' });
  }
});

// Add a new payment detail
router.post('/', async (req, res) => {
  try {
    const { bankName, accountNumber, ifscCode } = req.body;
    const newPaymentDetail = new PaymentDetail({ bankName, accountNumber, ifscCode });
    await newPaymentDetail.save();
    res.status(201).json({ message: 'Payment detail added successfully' });
  } catch (error) {
    res.status(500).json({ error: 'Error adding payment detail' });
  }
});

module.exports = router;
